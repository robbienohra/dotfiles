{
  "diagnostic.checkCurrentLine": true,
  "list.previewSplitRight": true,
  "yaml.format.enable": true,
  "coc.preferences.formatOnSaveFiletypes": [
    "python",
    "cpp",
    "json",
    "typescript",
    "svelte"
  ],
  "coc.preferences.jumpCommand": "edit",
  "python.formatting.autopep8Args": ["--in-place"],
  "python.formatting.provider": "black",
  "clangd.path": "~/.config/coc/extensions/coc-clangd-data/install/13.0.0/clangd_13.0.0/bin/clangd",
  "typescript.preferences.importModuleSpecifier": "non-relative",
  "typescript.autoClosingTags": true,
  "javascript.autoClosingTags": true,
  "typescript.format.placeOpenBraceOnNewLineForFunctions": true,
  "typescript.format.placeOpenBraceOnNewLineForControlBlocks": true,
  "markdownlint.config": {
    "no-missing-space-atx": false,
    "no-inline-html": false,
    "line-length": { "line_length": 80, "code_blocks": false, "tables": false },
    "no-bare-urls": false,
    "first-line-heading": false
  },
  "snippets.userSnippetsDirectory": "~/dotfiles/ultisnips",
  "sql.lintOnSave": true,
  "sql.formatOptions": {
    "language": "postgresql",
    "database": "postgresql"
  },
  "svelte.enable-ts-plugin": true
}
