[merge]
  tool = fugitive
  conflictstyle = merge
[mergetool "fugitive"]
  cmd = nvim -f -c "Gvdiffsplit!"
[diff]
  colorMoved = default
[mergetool]
  prompt = false
[credential]
  helper = store
[pull]
  rebase = true
[delta]
  navigate = true  # use n and N to move between diff sections
  side-by-side = true
[branch]
  autosetupmerge = true
[push]
  default = upstream
  autoSetupRemote = true
[commit]
  verbose = true
