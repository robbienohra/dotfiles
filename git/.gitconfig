[filter "lfs"]
  required = true
  clean = git-lfs clean -- %f
  smudge = git-lfs smudge -- %f
  process = git-lfs filter-process
[log]
  date = relative
[format]
  pretty = format:%C(yellow)%h %Cred%ad %Cblue%an%Cgreen%d %Creset%s
[alias]
  # logs
  l = log
  last = log -1 HEAD
  adog = log --all --decorate --oneline --graph
  rl = reflog --format='%C(auto)%h %<|(20)%gd %C(blue)%cr%C(reset) %gs (%s)'
  h = log -p 
  # switch
  sw = switch
  swc = switch -c
  # branch
  bd = branch -D
  # rebase
  rb = rebase
  rbi = rebase -i
  rba = rebase --abort
  rbc = rebase --continue
  # commit
  ca = commit --amend
  cm = commit -n -m
  # pull
  p = pull
  # push
  pu = push --set-upstream origin head
  pf = push --force-with-lease origin head
  # diffs
  di = diff
  din = diff --name-only 
  diu = diff @{upstream} @
  diun = diff @{upstream} @ --name-only
  oldest-ancestor = !zsh -c 'diff --old-line-format= --new-line-format= <(git rev-list --first-parent \"${1:-$1}\") <(git rev-list --first-parent \"${2:-HEAD}\") | head -1' -
  pr ="!f() { git diff origin/$1...head; }; f"
  prs ="!f() { git diff --shortstat origin/$1...head; }; f"
  prn = pr --name-only
  po ="!f() { git diff $(git oldest-ancestor $1)...head; }; f"
  no ="!f() { git rev-list --count HEAD ^$1; };f"
  # cherry picks
  cp = cherry-pick
  cpa = cherry-pick --abort
  cpc = cherry-pick --continue
  # misc
  ac = !git add . && git commit -am
  aa = add .
  st = status -sb
  stu = stash -u
  ru = remote update
  fe = fetch
  ma = merge --abort
  re = reset --hard @{u}
  res = restore
  cl = clean -f . 
  rh = reset --hard 
  # cco
  sws = switch staging
[core]
  editor = nvim
  excludesFile = /Users/robbienohra/.gitignore
