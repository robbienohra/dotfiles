[filter "lfs"]
	required = true
  	clean = git-lfs clean -- %f
  	smudge = git-lfs smudge -- %f
  	process = git-lfs filter-process
[alias]
  	l = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit
	last = log -1 HEAD
	rl = reflog
	h = log -p .
  	b = branch
  	bd = branch -D
  	lg = !git log --pretty=format:\"%C(magenta)%h%Creset -%C(red)%d%Creset %s %C(dim green)(%cr) [%an]\" --abbrev-commit -30
  	rom = rebase origin/master
  	ri = rebase -i
  	ra = rebase --abort
  	rc = rebase --continue
  	co = checkout
  	cob = checkout -b
  	com = checkout master
  	cl = checkout -- .
	c = checkout -
	ca = commit --amend
	cm = commit -m
	cms = commit -S -m
	cme = commit --allow-empty-message
  	pomn = pull origin main
	pomr = pull origin master
  	dn = !git push --force-with-lease origin HEAD
  	st = status -sb
  	stu = stash -u
  	aa = add .
  	rhom = reset --hard origin/master
  	cf = clean -f .
  	re = reset --hard @{u}
        ru = remote update
        fe = fetch
	pr = diff master...head
[core]
	editor = nvim
  	excludesFile = /Users/robbienohra/.gitignore
