[filter "lfs"]
  required = true
  clean = git-lfs clean -- %f
  smudge = git-lfs smudge -- %f
  process = git-lfs filter-process
[log]
  date = relative
[format]
  pretty = format:%C(yellow)%h %Cred%ad %Cblue%an%Cgreen%d %Creset%s
[alias]
  # logs
  l = log
  last = log -1 HEAD
  adog = log --all --decorate --oneline --graph
  rl = reflog
  h = log -p .
  # switch
  sw = switch
  swc = switch -c
  sws = switch staging
  # branch
  bd = branch -D
  # rebase
  rb = rebase
  rom = rebase origin/staging
  rbi = rebase -i
  rba = rebase --abort
  rbc = rebase --continue
  # commit
  ca = commit --amend
  cm = commit -m
  cms = commit -S -m
  cme = commit --allow-empty-message
  # push
  pu = push --set-upstream origin head
  pf = push --force-with-lease origin head
  # diffs
  di = diff
  din = diff --name-only 
  diu = diff @ @{upstream}
  diun = diff @ @{upstream} --name-only
  pr = diff staging...head
  # cherry picks
  cp = cherry-pick
  cpa = cherry-pick --abort
  cpc = cherry-pick --continue
  # misc
  ac = !git add . && git commit -am
  aa = add .
  st = status -sb
  stu = stash -u
  rhos = reset --hard origin/staging
  ru = remote update
  fe = fetch
  prn = pr --name-only
  ma = merge-abort
  re = reset --hard @{u}
  res = restore .
  cl = clean -f . 
[core]
  editor = nvim
  excludesFile = /Users/robbienohra/.gitignore
